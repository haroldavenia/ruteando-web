// START Top Navbar
nav.navbar.topnavbar(role='navigation')
    // START navbar header
    .navbar-header
      a.navbar-brand.bg-white(href='#/app/home') 
        .brand-logo
          img.img-responsive.mt-sm(src="app/img/ruteando.png", alt="Ruteando")
        .brand-logo-collapsed 
          img.img-responsive(src="app/img/logo-single.png", alt="Ruteando")
    // END navbar header

    // START Nav wrapper
    .nav-wrapper
      // START Left navbar
      ul.nav.navbar-nav
        li
          // Button used to collapse the left sidebar. Only visible on tablet and desktops
          a(ng-click="app.layout.isCollapsed = !app.layout.isCollapsed").hidden-xs
            em.fa.fa-navicon
          // Button to show/hide the sidebar on mobile. Visible on mobile only.
          a(toggle-state="aside-toggled", no-persist).visible-xs.sidebar-toggle
            em.fa.fa-navicon
      // END Left navbar
      
      // START Right Navbar
      ul.nav.navbar-nav.navbar-right
        //li
          a(search-open="")
            em.icon-magnifier
        // START Offsidebar button
        li
          //a(toggle-state="offsidebar-open", no-persist, tooltip="{{ 'routes.LABEL.routesInMap' | translate }}", tooltip-placement='bottom')
            em.fa.fa-list
            
        li
          a(ng-click="logout()")
            em.fa.fa-sign-out
        // END Offsidebar menu
      // END Right Navbar
    // END Nav wrapper
    
    // START Search form
    form.navbar-form(role='search', action="search.html")
      .form-group.has-feedback
        input.form-control(type='text', placeholder="{{ 'topbar.search.PLACEHOLDER' | translate }}")
        .fa.fa-times.form-control-feedback(search-dismiss)
      button.hidden.btn.btn-default(type='submit') Submit
    // END Search form

// END Top Navbar