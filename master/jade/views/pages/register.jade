.block-center.mt-xl.wd-xl(ng-controller="RegisterController")
    // START panel
    .panel.panel-flat
        .panel-heading.text-center
            a(href="#")
                img.block-center.img-rounded(src='app/img/logo.png', alt='Image')
        .panel-body
            p.text-center.pv {{ 'access.register.TITLE' | translate }}
            form.form-validate.mb-lg(role='form', name="registerForm", novalidate='', ng-submit="account.register()")
                .form-group.has-feedback
                    label.text-muted {{ "access.register.EMAIL_LABEL" | translate }}
                    input.form-control(type='email', name="account_email", autocomplete="off", ng-model="account.model.username", required='')
                    span.fa.fa-envelope.form-control-feedback.text-muted
                    span.text-danger(ng-show="registerForm.account_email.$dirty && registerForm.account_email.$error.required") This field is required
                    span.text-danger(ng-show="registerForm.account_email.$dirty && registerForm.account_email.$error.email") This field must be a valid email address
                .form-group.has-feedback
                    label.text-muted {{ "access.register.PASS_LABEL" | translate }}
                    input#id-password.form-control(type='password', name="account_password", ng-model="account.model.password", ng-pattern="/^[a-zA-Z0-9]{6,10}$/", required='')
                    span.fa.fa-lock.form-control-feedback.text-muted
                    span.text-danger(ng-show="registerForm.account_password.$dirty && registerForm.account_password.$error.required") This field is required
                    span.text-danger(ng-show="registerForm.account_password.$dirty && registerForm.account_password.$error.pattern") Input should match 'a-zA-Z0-9' and 6-10 length
                .form-group.has-feedback
                    label.text-muted {{ "access.register.REPIT_PASS_LABEL" | translate }}
                    input.form-control(type='password', name="account_password_confirm", ng-model="account.model.password_repeat", ui-validate="'$value==account.model.password'" ui-validate-watch="'password'")
                    span.fa.fa-lock.form-control-feedback.text-muted
                    span.text-danger(ng-show="registerForm.account_password_confirm.$dirty && registerForm.account_password_confirm.$error.validator") Password does Not match
                .clearfix
                    .checkbox.c-checkbox.pull-left.mt0
                        label
                            input(type='checkbox', required='', name="account_agreed", ng-model="account.agreed")
                            span.fa.fa-check
                            |  {{ "access.register.AGGRE_TERM" | translate }} 
                .text-danger(ng-show="registerForm.account_agreed.$dirty && registerForm.account_agreed.$error.required") You must agree the terms
                
                button.btn.btn-block.btn-primary.mt-lg(type='submit') {{ "access.register.CREATE_ACCOUNT" | translate }}
          
            .alert.alert-danger.text-center(ng-show='authMsg') {{authMsg}}      
            
            p.pt-lg.text-center {{ "access.register.HAVE_ACCOUNT" | translate }}
            a(ui-sref="access.login").btn.btn-block.btn-default {{ "access.register.SIGNUP" | translate }}